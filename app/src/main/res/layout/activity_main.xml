<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appcrops.sampleservice.MainActivity">

    <TextView
        android:id="@+id/service_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playing with Service" />

    <Button
        android:id="@+id/start_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Sevice"
        android:layout_below="@+id/service_txt_view"/>

    <Button
        android:id="@+id/stop_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Sevice"
        android:layout_toRightOf="@+id/start_service_btn"
        android:layout_below="@+id/service_txt_view"/>

    <Button
        android:id="@+id/start_intent_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Intent Sevice"
        android:layout_below="@+id/start_service_btn"/>

    <Button
        android:id="@+id/stop_intent_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Intent Sevice"
        android:layout_toRightOf="@+id/start_intent_service_btn"
        android:layout_below="@+id/start_service_btn"/>

    <Button
        android:id="@+id/color_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I can change my Color. try me"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@+id/start_intent_service_btn"/>

    <TextView
        android:id="@+id/bind_service_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Holder for Text from Bind Service"
        android:layout_below="@+id/color_change_btn"/>

    <Button
        android:id="@+id/bind_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Text from Bind Service"
        android:layout_below="@+id/bind_service_txt"/>
</RelativeLayout>
