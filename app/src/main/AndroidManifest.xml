<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appcrops.sampleservice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".MyIntentService"
            android:exported="false" />
        <service
            android:name=".MyIntentBindService"
            android:exported="false" />
        <service
            android:name=".MyIntentServiceBroadcaster"
            android:exported="false"></service>
       <!-- <receiver android:name=".MainActivity$MyBroadcastReceiver">
            <intent-filter>
                <action android:name="COM.SAMPLE_ACTION_PROGRESS"/>
            </intent-filter>
        </receiver> -->

    </application>

</manifest>